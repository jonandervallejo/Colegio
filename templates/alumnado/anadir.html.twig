{% extends 'base.html.twig' %}
{% block contenido %}
    <div class="container">
        {% if mensaje %}
            <h1 class="container text-center rojo">{{ mensaje }}</h1>
        {% endif %}
        <div class="row name">
            <div class="main-login main-center">
                <h2>{{ titulo }}</h2>
                <form class="" method="POST" action="{{ path('anadir') }}">
                    <div class="form-group">
                        <label for="dni" class="cols-sm-2 control-label">Dni</label>
                        <div class="cols-sm-10">
                            <span class="input-group-addon">
                                <i class="fa fa-user fa" aria-hidden="true"></i>
                                <input type="text" class="form-control" name="dni"
                                       id="dni" placeholder="dni"/>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="nombre" class="cols-sm-2 control-label">Nombre</label>
                        <div class="cols-sm-10">
                            <span class="input-group-addon">
                                <i class="fa fa-user fa" aria-hidden="true"></i>
                                <input type="text" class="form-control" name="nombre"
                                       id="nombre" placeholder="nombre"/>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="apellido1" class="cols-sm-2 control-label">Apellido 1</label>
                        <div class="cols-sm-10">
                            <span class="input-group-addon">
                                <i class="fa fa-user fa" aria-hidden="true"></i>
                                <input type="text" class="form-control" name="apellido1"
                                       id="apellido1" placeholder="apellido1"/>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="apellido2" class="cols-sm-2 control-label">Apellido 2</label>
                        <div class="cols-sm-10">
                            <span class="input-group-addon">
                                <i class="fa fa-user fa" aria-hidden="true"></i>
                                <input type="text" class="form-control" name="apellido2"
                                       id="apellido2" placeholder="apellido2"/>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="provincia" class="cols-sm-2 control-label">Provincia</label>
                        <div class="cols-sm-10">
                            <span class="input-group-addon">
                                <i class="fa fa-user fa" aria-hidden="true"></i>
                                <select id="provincia" name="provincia" class="form-control">
                                    {% for provincia in provincias %}
                                        <option value="{{ provincia }}">{{ provincia }}</option>
                                    {% endfor %}
                                </select>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="fecha" class="cols-sm-2 control-label">Fecha</label>
                        <div class="cols-sm-10">
                            <span class="input-group-addon">
                                <i class="fa fa-user fa" aria-hidden="true"></i>
                                <input type="date" class="form-control" name="fecha"
                                       id="fecha" placeholder="fecha"/>
                            </span>
                        </div>
                    </div>
                    <input type="submit" value="Guardar" class="btn btn-primary btn-lg btn-block login-button"/>
                </form>
            </div>
        </div>
    </div>
{% endblock %}